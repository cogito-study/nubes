{
  "name": "cogito-backend",
  "version": "0.1.1",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:dev": "env-cmd .env.dev ts-node src/index.ts",
    "start:staging": "env-cmd .env.staging ts-node src/index.ts",
    "start:prod": "env-cmd .env.prod ts-node src/index.ts",
    "apollo-service-push:staging": "apollo service:push --endpoint=https://cogito-graphql-staging.herokuapp.com/  --key=service:cogito-backend-staging:uB1g_aecUZVvRppG_ijE4w",
    "apollo-service-push:prod": "apollo service:push --endpoint=https://cogito-graphql-prod.herokuapp.com/  --key=service:cogito-backend-prod:7DzU4ECQnW5sGiDbMM2fEw",
    "prisma-generate:dev": "prisma generate --env-file .env.dev",
    "prisma-generate:staging": "prisma generate --env-file .env.staging",
    "prisma-generate:prod": "prisma generate --env-file .env.prod",
    "prisma-token:dev": "prisma token --env-file .env.dev",
    "prisma-token:staging": "prisma token --env-file .env.staging",
    "prisma-token:prod": "prisma token --env-file .env.prod",
    "prisma-deploy:dev": "prisma deploy --env-file .env.dev",
    "prisma-deploy:staging": "prisma deploy --env-file .env.staging",
    "prisma-deploy:prod": "prisma deploy --env-file .env.prod",
    "deploy:staging": "env-cmd .env.staging dpl --provider=heroku --app=$HEROKU_APP --api-key=$HEROKU_API_KEY",
    "deploy:prod": "env-cmd .env.prod dpl --provider=heroku --app=$HEROKU_APP --api-key=$HEROKU_API_KEY",
    "generate": "graphqlgen",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.20",
    "@types/bcrypt": "3.0.0",
    "@types/graphql": "^14.0.7",
    "@types/jsonwebtoken": "8.3.0",
    "@types/heroku-logger": "^0.1.0",
    "@types/nodemailer": "^4.6.6",
    "@types/request": "^2.48.1",
    "@types/slate": "^0.44.0",
    "@types/ws": "6.0.1",
    "aws-sdk": "^2.413.0",
    "bcrypt": "^3.0.4",
    "email-validator": "^2.0.4",
    "env-cmd": "^8.0.2",
    "graphql-import": "^0.7.1",
    "graphql-shield": "5.3.0",
    "graphql-yoga": "1.17.4",
    "heroku-logger": "^0.3.3",
    "immutable": "^4.0.0-rc.12",
    "jsonwebtoken": "8.5.0",
    "nodemailer": "^5.1.1",
    "prisma": "^1.27.4",
    "prisma-client-lib": "^1.27.4",
    "request": "^2.88.0",
    "slate": "^0.44.10",
    "ts-node": "8.0.2",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --ext .ts --fix",
      "prettier --write",
      "git add"
    ]
  }
}
