{
  "name": "cogito-backend",
  "version": "0.1.4",
  "license": "MIT",
  "scripts": {
    "seed": "ts-node prisma/seed.ts",
    "postinstall": "prisma2 generate",
    "start": "ts-node-dev --no-notify --respawn --transpileOnly ./src",
    "build": "yarn run build-ts && yarn run lint",
    "serve": "node dist/src/index.js",
    "watch-node": "nodemon dist/src/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"yarn run watch-ts\" \"yarn run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/src/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"yarn run watch-ts\" \"yarn run serve-debug\""
  },
  "dependencies": {
    "@google-cloud/storage": "3.2.1",
    "apollo-server": "2.9.3",
    "bcrypt": "3.0.6",
    "date-fns": "2.4.1",
    "dotenv": "8.1.0",
    "env-cmd": "9.0.3",
    "graphql-middleware": "4.0.1",
    "jsonwebtoken": "8.5.1",
    "nexus": "0.12.0-beta.13",
    "nexus-prisma": "0.4.2",
    "stream": "0.0.2",
    "uuid": "3.3.3",
    "yup": "0.27.0"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/dotenv": "6.1.1",
    "@types/faker": "4.1.6",
    "@types/jsonwebtoken": "8.3.4",
    "@types/node": "12.7.12",
    "@types/request": "^2.48.3",
    "@types/uuid": "3.4.5",
    "@types/yup": "0.26.24",
    "@typescript-eslint/eslint-plugin": "2.3.3",
    "@typescript-eslint/parser": "2.3.3",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-graphql": "3.0.3",
    "eslint-plugin-prettier": "3.1.0",
    "faker": "4.1.0",
    "husky": "1.3.1",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "prisma2": "2.0.0-preview013.3",
    "request": "2.88.0",
    "stream": "0.0.2",
    "ts-node": "8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.3",
    "uuid": "3.3.3",
    "yup": "0.27.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --ext .ts --fix",
      "prettier --write",
      "git add"
    ]
  }
}
