type Post {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  published: Boolean! @default(value: "false")
  title: String!
  content: String
  author: User!
}

enum NoteType {
  NOTE
  CASE_STUDY
}

type Note {
  id: ID! @unique
  authorId: ID!
  text: String!
  comments: [ID!]
  noteType: NoteType!
  description: String
  upvotes: [ID!]
}

type Comment {
  id: ID! @unique
  authorId: ID!
  text: String!
  replies: [ID!]
  upvotes: [ID!]
}

type Subject {
  id: ID! @unique
  name: String! @unique
  code: String! @unique
  faculty: [ID!]
  students: [ID!]
  subjectInfos: [SubjectInfo!]!
  prerequisites: [ID!]
  notes: [ID!]
}

type SubjectInfo {
  title: String!
  subtitle: String
  text: String!
}

type User {
  id: ID!
  password: String!
  email: String! @unique
  firstname: String
  lastname: String
  neptun: String! @unique
  isAdmin: Boolean!
}
